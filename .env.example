# eSIM Gateway Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ─────────────────────────────────────────────────────────────────────────────
# Gateway Settings
# ─────────────────────────────────────────────────────────────────────────────

# Environment: development, staging, production
ENV=development
DEBUG=false

# ─────────────────────────────────────────────────────────────────────────────
# API Security
# ─────────────────────────────────────────────────────────────────────────────

# Comma-separated list of valid API keys for authenticating requests
# Generate keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your-api-key-here,another-key-here

# Header name for API key authentication
API_KEY_HEADER=X-API-Key

# Set to false to disable API key authentication (development only!)
REQUIRE_API_KEY=true

# ─────────────────────────────────────────────────────────────────────────────
# Rate Limiting
# ─────────────────────────────────────────────────────────────────────────────

# Maximum requests per time window
RATE_LIMIT_REQUESTS=100

# Time window: second, minute, hour, day
RATE_LIMIT_WINDOW=minute

# ─────────────────────────────────────────────────────────────────────────────
# Retry & Circuit Breaker
# ─────────────────────────────────────────────────────────────────────────────

# Maximum retry attempts for failed requests
RETRY_MAX_ATTEMPTS=3

# Exponential backoff settings (seconds)
RETRY_MIN_WAIT=1.0
RETRY_MAX_WAIT=10.0
RETRY_MULTIPLIER=2.0

# Circuit breaker settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60.0

# ─────────────────────────────────────────────────────────────────────────────
# HTTP Client
# ─────────────────────────────────────────────────────────────────────────────

HTTP_TIMEOUT=30.0
HTTP_MAX_CONNECTIONS=20
HTTP_MAX_KEEPALIVE=10

# ─────────────────────────────────────────────────────────────────────────────
# eSIM Go Provider
# ─────────────────────────────────────────────────────────────────────────────

ESIMGO_API_KEY=your-esimgo-api-key
ESIMGO_SANDBOX=true

# ─────────────────────────────────────────────────────────────────────────────
# Zetexa Provider - Production (api.zetexa.com)
# ─────────────────────────────────────────────────────────────────────────────

ZETEXA_API_KEY=your-zetexa-api-key
ZETEXA_EMAIL=your-email@example.com
ZETEXA_PASSWORD=your-password
ZETEXA_RESELLER_ID=your-reseller-id
ZETEXA_ACCESS_TOKEN=your-access-token

# ─────────────────────────────────────────────────────────────────────────────
# Zetexa Provider - Sandbox (apistg.zetexa.com)
# ─────────────────────────────────────────────────────────────────────────────

ZETEXA_SANDBOX_API_KEY=your-sandbox-api-key
ZETEXA_SANDBOX_EMAIL=your-sandbox-email@example.com
ZETEXA_SANDBOX_PASSWORD=your-sandbox-password
ZETEXA_SANDBOX_RESELLER_ID=your-sandbox-reseller-id
ZETEXA_SANDBOX_ACCESS_TOKEN=your-sandbox-access-token

# Which Zetexa environment to use (true = sandbox/staging, false = production)
ZETEXA_SANDBOX=true

# ─────────────────────────────────────────────────────────────────────────────
# esimCard Provider - Production (portal.esimcard.com)
# ─────────────────────────────────────────────────────────────────────────────

ESIMCARD_EMAIL=your-email@example.com
ESIMCARD_PASSWORD=your-password

# ─────────────────────────────────────────────────────────────────────────────
# esimCard Provider - Sandbox (sandbox.esimcard.com)
# ─────────────────────────────────────────────────────────────────────────────

ESIMCARD_SANDBOX_EMAIL=your-sandbox-email@example.com
ESIMCARD_SANDBOX_PASSWORD=your-sandbox-password

# Which esimCard environment to use (true = sandbox, false = production)
ESIMCARD_SANDBOX=true
